<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    android:background="#F1F1F1"
    tools:context=".MainActivity" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/mapbutton"
        android:text="View in Map"
        android:textSize="15sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/bookbutton"
        android:text="One Click Book"
        android:textSize="15sp"
       android:layout_toRightOf="@+id/mapbutton"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/callsupport"
        android:text="Call Support"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/bookbutton"/>


</RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row" >

    </ListView>



</LinearLayout>
